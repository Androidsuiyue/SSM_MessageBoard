<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.qzhenghao.dao.ScoreDao">
    <insert id="insertScore" parameterType="com.qzhenghao.entity.Score">
        INSERT  INTO score (change_type,score,user_id)
        VALUES (#{changeType},#{score},#{user.id})
    </insert>
    <select id="queryAll" resultType="com.qzhenghao.entity.Score" >
        SELECT
        *
        FROM
        score
    </select>
    <select id="queryLimit" resultType="com.qzhenghao.entity.Score">
        SELECT
          *
        FROM
          score
        ORDER BY
          create_time
        DESC
        LIMIT #{offset}, #{limit}
    </select>
</mapper>